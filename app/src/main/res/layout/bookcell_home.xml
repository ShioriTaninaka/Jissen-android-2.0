<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <ImageView
        android:id="@+id/coverImageView_bookCell"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerInside"
        android:elevation="10dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/coverblue" />

    <TextView
        android:id="@+id/titleTextView_bookCell"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="190dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:maxLines="4"
        android:text="Alice's Adventure in wonderland Second Edition."
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.781"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleOnImageTextView_bookCell"
        android:layout_width="91dp"
        android:layout_height="82dp"
        android:gravity="center"
        android:maxLines="4"
        android:text="Alice's Adventure in wonderland Second Edition."
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/coverImageView_bookCell"
        app:layout_constraintEnd_toEndOf="@+id/coverImageView_bookCell"
        app:layout_constraintStart_toStartOf="@+id/coverImageView_bookCell"
        app:layout_constraintTop_toTopOf="@+id/coverImageView_bookCell" />

    <TextView
        android:id="@+id/authorTextView_bookCell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/publisherTextView_bookCell"
        app:layout_constraintEnd_toEndOf="@+id/titleTextView_bookCell"
        app:layout_constraintStart_toStartOf="@+id/titleTextView_bookCell"
        tools:text="Lewis Troll Junior" />

    <TextView
        android:id="@+id/publisherTextView_bookCell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Penguin Publisher Co."
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/titleTextView_bookCell"
        app:layout_constraintStart_toStartOf="@+id/titleTextView_bookCell" />
</androidx.constraintlayout.widget.ConstraintLayout>